{
  "expo": {
    "name": "Clever",
    "slug": "photorestorationhd-app", 
    "version": "1.0.5",
    "sdkVersion": "53.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "photorestorationhdapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "jsEngine": "hermes",
    "splash": {
      "image": "./assets/images/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "assetBundlePatterns": [
      "assets/images/*",
      "assets/fonts/*",
      "assets/videos/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.chanakyap.photorestorationhdapp",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSPhotoLibraryAddUsageDescription": "This app needs access to your photo library to save restored photos.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to select and save photos.",
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": false,
          "NSAllowsArbitraryLoadsInWebContent": false,
          "NSExceptionDomains": {
            "supabase.co": {
              "NSIncludesSubdomains": true,
              "NSTemporaryExceptionRequiresForwardSecrecy": false
            },
            "replicate.com": {
              "NSIncludesSubdomains": true,
              "NSTemporaryExceptionRequiresForwardSecrecy": false
            },
            "replicate.delivery": {
              "NSIncludesSubdomains": true,
              "NSTemporaryExceptionRequiresForwardSecrecy": false
            }
          }
        }
      },
      "storeKitConfiguration": "./PastPix.storekit"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera to capture photos for restoration"
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow $(PRODUCT_NAME) to save restored photos to your photo library",
          "savePhotosPermission": "Allow $(PRODUCT_NAME) to save restored photos to your photo library",
          "isAccessMediaLocationEnabled": true
        }
      ],
      "expo-secure-store",
      "expo-localization",
      "expo-video"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "1e1e5fa5-1114-4591-9765-2534344ca453"
      }
    },
    "android": {
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_MEDIA_LOCATION"
      ],
      "package": "com.chanakyap.photorestorationhdapp"
    }
  }
}
